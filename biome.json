{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "all": true,
      "correctness": {
        "noUndeclaredVariables": "off",
        "useImportExtensions": "off",
        "noNodejsModules": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noNamespaceImport": "off",
        "useFilenamingConvention": "off"
      },
      "nursery": {
        "all": false
      },
      "suspicious": {
        "noConsole": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  }
}
